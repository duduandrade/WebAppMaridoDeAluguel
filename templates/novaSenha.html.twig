
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Marido de Aluguel{% endblock %}</title>
        {#<link href="{{ asset('css/materialize.css') }}" rel="stylesheet" />#}
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!--Import materialize.css-->
        <link rel="stylesheet" type = "text/css" href="/{{path}}/css/materialize.css">


        <!--Let browser know website is optimized for mobile-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    </head>
    <body>

        <div class="section"></div>
        <main>
            <center>
                <img class="responsive-img" style="width: 250px;" src="https://i.imgur.com/ax0NCsK.gif" />
                <div class="section"></div>

                <div class="section"></div>

                <div class="container">
                    <div class="row" >
                        <form id="form_nova_senha" class="col s12  m6 offset-m3 l6 offset-l3">
                        {{ form_start(formNovaSenha, { 'attr': {'class': 'col s12  m6 offset-m3 l6 offset-l3 ', 'id': 'form_nova_senha'} }) }}
                        <div class='row'>
                            <div class='col s12 '>
                                <p  class="blue-text center-align" > Cadastre uma nova senha</p>
                            </div>
                        </div>

                        <div class='row'>
                            <div class='input-field col s12'>
                                {{ form_widget(formNovaSenha.senha.first, {'attr':{'id':'password'} } ) }}
                              
                                <label for='formNovaSenha_senha_first'>Senha</label>
                            </div>
                           
                        </div>
                                <div class='row'>
                            <div class='input-field col s12'>
                                {{ form_widget(formNovaSenha.senha.second, {'attr':{'id':'password'} } ) }}
                                <label for='formNovaSenha_senha_second' data-error="Senhas não são iguais" data-success="Senhas correspodem">Confirmar senha</label>
                            </div>
                           
                        </div>

                        <br />
                        <center>
                            <div class='row'>
                                <button type='submit' id="btnPrincipal" name='btn_login' class='col s12 btn btn-large waves-effect orange'>Cadastrar senha</button>
{#                             <button type='button' style="display: none" id="btnEsqueciSenha"  class='col s12 btn btn-large waves-effect indigo'>Enviar e-mail</button>
#}
                            </div>
                        </center>
                         {{ form_end(formNovaSenha) }}
                    
                    </div>
                </div>

            </center>

            <div class="section"></div>
            <div class="section"></div>
        </main>

        <!-- Scripts -->
     <script type="text/javascript" src="/{{path}}/js/jquery-3.3.1.min.js"></script>
        <script type="text/javascript" src="/{{path}}/js/materialize.js"></script>
       <script type="text/javascript" src="/{{path}}/js/novaSenha.js"></script>

        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.0/jquery.mask.js"></script>
      

    </body>
</html>
